{
  "name": "monitorfish",
  "description": "Monitorfish application.",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "private": true,
  "engines": {
    "node": "18",
    "npm": "8"
  },
  "workspaces": {
    "packages": [
      "./frontend"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "start": "npm run start --workspace=frontend",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "test:lint": "npm run test:lint --workspace=frontend",
    "test:lint:partial": "eslint ./frontend/**/*.{ts,tsx}",
    "test:type": "npm run test:type --workspace=frontend",
    "test:type:partial": "tsc --downlevelIteration --esModuleInterop  --jsx react-jsx --noEmit --skipLibCheck **/*.ts **/*.tsx",
    "test:unit": "npm run test:unit --workspace=frontend"
  },
  "devDependencies": {
    "@ivangabriele/prettier-config": "3.1.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1"
  },
  "lint-staged": {
    "*.{json,md,yaml,yml}": "prettier --write",
    "*.{ts,tsx}": [
      "eslint",
      "tsc --downlevelIteration --esModuleInterop --jsx react-jsx --noEmit --skipLibCheck"
    ]
  },
  "prettier": "@ivangabriele/prettier-config"
}
