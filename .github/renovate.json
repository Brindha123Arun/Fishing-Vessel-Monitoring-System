{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":timezone(Europe/Paris)",
    "docker:enableMajor",
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "build",
  "packageRules": [
    {
      "groupName": "Backend",
      "description": "Group backend dependencies",
      "matchPaths": ["backend/**"],
      "assignees": ["louptheron"],
      "semanticCommitScope": "backend",
      "semanticCommitType": "build"
    },
    {
      "groupName": "Data",
      "description": "Group data dependencies",
      "matchPaths": ["datascience/**"],
      "assignees": ["VincentAntoine"],
      "semanticCommitScope": "data",
      "semanticCommitType": "build"
    },
    {
      "groupName": "Frontend",
      "description": "Group frontend dependencies",
      "matchPaths": ["frontend/**"],
      "assignees": ["ivangabriele", "louptheron"],
      "semanticCommitScope": "frontend",
      "semanticCommitType": "build"
    },
    {
      "groupName": "Infra",
      "description": "Group infra dependencies",
      "matchPaths": ["infra/**"],
      "assignees": ["ivangabriele", "louptheron", "VincentAntoine"],
      "semanticCommitScope": "infra",
      "semanticCommitType": "build"
    }
  ]
}
